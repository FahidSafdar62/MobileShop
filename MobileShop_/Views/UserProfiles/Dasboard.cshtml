@section Scripts
	{
	<script>
				$(function () {
					$('#StudentCounter').load('/UserProfiles/CatagoryCount');
					$('#ItemsCount').load('/UserProfiles/ItemsCount');
					$('#PurchaseCount').load('/UserProfiles/PurchaseCount');
					$('#SalesCount').load('/UserProfiles/SalesCount');
					$('#VenderCount').load('/UserProfiles/VenderCount');
					$('#CustomersCount').load('/UserProfiles/CustomerCount');
					
					$('#cateogyAdded').load('/UserProfiles/CategoryAdded');
					$('#lastAddedCategory').load('/UserProfiles/LastAddedCategory');
					$('#categoryWithoutItem').load('/UserProfiles/CategoryWithoutItem');

					$('#productAdded').load('/UserProfiles/ProductAdded');
					$('#lastAddedProduct').load('/UserProfiles/LastAddedProduct');
					$('#mostExpensiveProducts').load('/UserProfiles/MostExpensiveProducts');

					$('#totalNoOfSales').load('/UserProfiles/TotalNoOfSales');
					$('#maximumSingleSale').load('/UserProfiles/MaximumSingleSale');
					$('#minimumSingleSale').load('/UserProfiles/MinimumSingleSale');

					$('#totalNoofPurchases').load('/UserProfiles/TotalNoOfPurchases');
					$('#minimumSinglePurchase').load('/UserProfiles/MinimumSinglePurchase');
					$('#maximumSinglePurchase').load('/UserProfiles/MaximumSinglePurchase');


				});
	</script>
